# editorconfig.org
root = true

# General (for all files):
#   * utf-8 character encoding
#   * unix-style newlines
#   * newline ending for every file
#   * no trailing whitespace
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript and JSON: 2 space indentation
[*.{js,json}]
indent_style = space
indent_size = 2
